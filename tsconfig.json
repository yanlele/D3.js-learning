{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "experimentalDecorators": true,
        "typeRoots": [
            "/node_modules/@type",
            "typings/modules"
        ],
        "allowJs": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist-ts",
        "baseUrl": ".",
        "types" : ["node"],
        "lib": ["es2017", "dom", "es2016"]
    },
    "include": [
        "app/**/*"
    ],
    "exclude": [
        "/node_modules"
    ]
}